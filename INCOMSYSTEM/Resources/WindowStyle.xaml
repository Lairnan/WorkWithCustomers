<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BgBtnUp" R="57" G="70" B="170"/>
    
    <Style TargetType="{x:Type Button}" x:Key="BtnUp">
        <Setter Property="Background" Value="#4C37B1D4"/>
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="30" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="3,0" />
        <Setter Property="Foreground" Value="#fff" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center">
                            <ContentPresenter.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Color="#3946AA"
                                    RenderingBias="Quality"
                                    ShadowDepth="2" />
                            </ContentPresenter.Effect>
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF85E412" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#FFE29E26" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>