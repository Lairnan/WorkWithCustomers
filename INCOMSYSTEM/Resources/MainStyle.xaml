<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainStyle">
        <Setter Property="TextBlock.FontFamily" Value="Comic Sans MS"/>
        <Setter Property="TextBlock.FontSize" Value="16"/>
    </Style>
    
    <Style TargetType="TextBlock" BasedOn="{StaticResource MainStyle}"></Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource MainStyle}"></Style>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource MainStyle}"></Style>
    <Style TargetType="Button" BasedOn="{StaticResource MainStyle}"></Style>
    <Style TargetType="Label" BasedOn="{StaticResource MainStyle}"></Style>
</ResourceDictionary>